<UserControl x:Class="ForksnSpoons.Components.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForksnSpoons.Components"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel x:Name="OverlayBody" Grid.ColumnSpan="3" Panel.ZIndex="2" Background="Gray" Opacity="0.3" Visibility="Hidden">
        <fa:ImageAwesome Icon="Spinner" Spin="True" Height="50" Width="50" />
    </DockPanel>
</UserControl>
