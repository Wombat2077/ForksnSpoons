<Window x:Class="ForksnSpoons.Views.DeletingProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForksnSpoons.Views"
        mc:Ignorable="d"
        Title="DeletingProductDialog" Height="200" Width="300">
    <Grid>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold" TextWrapping="WrapWithOverflow" Width="225" Margin="25,37,0,0" Height="68">
            Вы уверены, что хотите удалить данную запись?
        </TextBlock>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button IsDefault="True" Template="{StaticResource NoMouseOverButtonTemplate}" Style="{StaticResource button}" Click="YesHandler" Width="50" Margin="0,0,10, 0" Content="Да"/>
            <Button IsCancel="True" Template="{StaticResource NoMouseOverButtonTemplate}" Style="{StaticResource button}" Width="70" Content="Нет"/>

        </StackPanel>
    </Grid>
</Window>
